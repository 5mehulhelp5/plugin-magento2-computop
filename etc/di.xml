<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="ComputopBaseFacade" type="Fatchip\Computop\Model\Method\BaseMethod">
        <arguments>
            <!--argument name="code" xsi:type="const">Fatchip\Computop\Model\ComputopConfig::METHOD_CREDITCARD</argument-->
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">ComputopValueHandlerPool</argument>
            <!-- Needed? argument name="validatorPool" xsi:type="object">BraintreeValidatorPool</argument -->
            <argument name="commandPool" xsi:type="object">ComputopGatewayCommandPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="ComputopCreditcardFacade" type="ComputopBaseFacade">
        <arguments>
            <argument name="code" xsi:type="const">Fatchip\Computop\Model\ComputopConfig::METHOD_CREDITCARD</argument>
        </arguments>
    </virtualType>

    <virtualType name="ComputopValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">ComputopConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="ComputopConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">ComputopCreditcardVaultPaymentConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="ComputopCreditcardVaultPaymentConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Fatchip\Computop\Model\ComputopConfig::METHOD_CREDITCARD</argument>
        </arguments>
    </virtualType>

    <virtualType name="ComputopGatewayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">ComputopGatewayAuthorizeCommand</item>
                <!-- @TODO
                <item name="capture" xsi:type="string">ComputopGatewayCaptureCommand</item>
                <item name="refund" xsi:type="string">ComputopGatewayCaptureCommand</item>
                <item name="void" xsi:type="string">ComputopGatewayVoidCommand</item>
                -->
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="ComputopGatewayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">ComputopGatewayAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">ComputopGatewayResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Fatchip\Computop\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Fatchip\Computop\Gateway\Http\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="ComputopGatewayAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="autorization" xsi:type="string">Fatchip\Computop\Gateway\Request\AuthorizationRequest</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Response handlers -->
    <virtualType name="ComputopGatewayResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="handler" xsi:type="string">Fatchip\Computop\Gateway\Response\Handler</item>
            </argument>
        </arguments>
    </virtualType>
</config>
